.PHONY: all check clean distclean realclean

OCT := gl_print.oct

MKOCTFILE  ?= mkoctfile
MKOCTFLAGS ?= -Wall -v

all: $(OCT)

debug : MKOCTFLAGS += -g
debug : all

%.oct: %.cc
	$(MKOCTFILE) $(MKOCTFLAGS) -I/usr/include/freetype2 $^ @LIBS@ -o $@

check: $(OCT)
	octave -q --eval 'sombrero; gl_print (gcf(), "check1.svg", "svg")'

clean:
	rm -f *.oct *.o
	rm -f octave-core octave-workspace

distclean: clean
	rm -f Makefile

realclean: clean
	rm -f configure config.status config.log
	rm -rf autom4te.cache
	rm -f Makefile
	rm -f *.svg

