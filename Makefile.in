.PHONY: all check clean distclean realclean

OCT := __gl_print__.oct

MKOCTFILE  ?= mkoctfile
MKOCTFLAGS ?= -Wall -v

all: $(OCT)

debug : MKOCTFLAGS += -g
debug : all

%.oct: %.cc
	$(MKOCTFILE) $(MKOCTFLAGS) -I/usr/include/freetype2 $^ @LIBS@ -o $@

check: $(OCT)
	octave -q --eval 'sombrero; gl_print ("sombrero.svg")'
	octave -q --eval 'sombrero; gl_print ("sombrero.png")'
	octave -q --eval 'plot (sin (0:0.1:2*pi)); gl_print (gcf, "sin_simple.svg", true)'
	octave -q --eval 'plot (sin (0:0.1:2*pi)); gl_print (gcf, "sin_simple.png", true)'

clean:
	rm -f *.oct *.o *.svg *.png *.eps
	rm -f octave-core octave-workspace

distclean: clean
	rm -f Makefile

realclean: clean
	rm -f configure config.status config.log
	rm -rf autom4te.cache
	rm -f Makefile

